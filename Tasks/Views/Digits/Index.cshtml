@model Tasks.Models.DigitViewModel

@using (Html.BeginForm("Index", "Digits", FormMethod.Post, new { @class = "mr-2" }))
{
    <div class="form-row">
        <div class="col-6 mx-2">
            <div class="form-group">
                @Html.LabelFor(model => model.Number, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Number, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Number)
            </div>
        </div>
        <div class="row mt-3">
            <div class="text-center">
                <button type="submit" class="btn btn-primary text ">
                    FInd Unique Digits
                </button>
            </div>
        </div>
    </div>
}



<form>
    <div class="form-group">
        <label>Unique Digits in entered number are : </label>
        @Html.DisplayFor(model => model.UniqueDigits)
    </div>
</form>

